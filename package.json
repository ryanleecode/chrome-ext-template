{
  "name": "chrome-ext-template",
  "private": true,
  "scripts": {
    "dev": "npm run watch",
    "copy-assets": "mkdir -p dist && cp -r assets/* dist/",
    "build": "npm run clean && npm run copy-assets && run-p build:**",
    "build:popup": "parcel build src/popup.html --public-url='/'",
    "build:newtab": "parcel build src/newtab.html --public-url='/'",
    "build:background": "parcel build scripts/background.ts -o background.js",
    "build:lambda": "netlify-lambda build lambda",
    "watch": "npm run clean && npm run copy-assets && run-p watch:**",
    "watch:popup": "parcel watch src/popup.html --public-url='/'",
    "watch:newtab": "parcel watch src/newtab.html --public-url='/'",
    "watch:background": "parcel watch scripts/background.ts -o background.js",
    "watch:serve": "parcel serve ignore/index.html",
    "watch:lambda": "netlify-lambda serve lambda",
    "web-ext:brave": "web-ext run -t chromium --chromium-binary /usr/bin/brave --source-dir dist",
    "web-ext:chrome": "web-ext run -t chromium --chromium-binary /usr/bin/google-chrome-stable --source-dir dist",
    "test": "jest",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "autoprefixer": "^9.8.6",
    "axios": "^0.21.0",
    "fp-ts": "^2.9.1",
    "http-status-codes": "^2.1.4",
    "io-ts": "^2.2.13",
    "postcss": "^7.0.35",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.1",
    "webextension-polyfill-ts": "^0.22.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/plugin-transform-object-assign": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@types/aws-lambda": "^8.10.64",
    "@types/jest": "^26.0.18",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.1",
    "jest": "^26.6.3",
    "mockzilla": "^0.9.0",
    "mockzilla-webextension": "^0.9.0",
    "netlify-lambda": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2",
    "web-ext": "^5.4.0"
  }
}
